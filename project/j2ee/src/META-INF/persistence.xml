<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="bbdbEntities" transaction-type="JTA">
        <class>models.GameEntity</class>
        <class>models.GamestatsEntity</class>
        <class>models.PlayerEntity</class>
        <class>models.PositionEntity</class>
        <class>models.TeamEntity</class>
        <class>models.Game</class>
        <class>models.Gamestats</class>
        <class>models.Player</class>
        <class>models.Position</class>
        <class>models.Team</class>

        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:oracle:thin:@//localhost:1521/XE"/>
            <property name="eclipselink.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="eclipselink.jdbc.user"/>
            <property name="eclipselink.jdbc.password"/>
        </properties>
    </persistence-unit>
</persistence>
